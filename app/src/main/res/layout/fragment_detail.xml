<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.healthcare.features_news.presentation.fragments.detail.DetailFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/ic_medicine_amico"
        android:layout_gravity="center"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingVertical="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitleMedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="Medicine Name"
            android:textColor="@color/button"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="1"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvMedicineName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvMedicineNameSeparator"/>
        <TextView
            android:id="@+id/tvMedicineNameSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintTop_toTopOf="@+id/tvMedicineName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvMedicineName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="Panadol"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvMedicineNameSeparator"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/tvTitleDoze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="Doze Time"
            android:textColor="@color/button"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvDoze"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMedicineName"
            app:layout_constraintEnd_toStartOf="@id/tvDozeSeparator"/>
        <TextView
            android:id="@+id/tvDozeSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/tvDoze"
            app:layout_constraintStart_toStartOf="@+id/tvMedicineNameSeparator"
            app:layout_constraintEnd_toEndOf="@+id/tvMedicineNameSeparator"/>
        <TextView
            android:id="@+id/tvDoze"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="3"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvMedicineName"
            app:layout_constraintStart_toStartOf="@id/tvMedicineName"
            app:layout_constraintEnd_toEndOf="parent"/>



        <TextView
            android:id="@+id/tvTitleStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="Strength"
            android:textColor="@color/button"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvStrength"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMedicineName"
            app:layout_constraintEnd_toStartOf="@id/tvStrengthSeparator"/>
        <TextView
            android:id="@+id/tvStrengthSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/tvStrength"
            app:layout_constraintStart_toStartOf="@+id/tvMedicineNameSeparator"
            app:layout_constraintEnd_toEndOf="@+id/tvMedicineNameSeparator"/>

        <TextView
            android:id="@+id/tvStrength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="150mg"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvDoze"
            app:layout_constraintStart_toStartOf="@id/tvMedicineName"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>