<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_card_view"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitleMedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="Medicine Name"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="1"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvMedicineName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvMedicineNameSeparator"/>
        <TextView
            android:id="@+id/tvMedicineNameSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintTop_toTopOf="@+id/tvMedicineName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvMedicineName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="Panadol"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvMedicineNameSeparator"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/tvTitleDoze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="Doze Time"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvDoze"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMedicineName"
            app:layout_constraintEnd_toStartOf="@id/tvDozeSeparator"/>
        <TextView
            android:id="@+id/tvDozeSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/tvDoze"
            app:layout_constraintStart_toStartOf="@+id/tvMedicineNameSeparator"
            app:layout_constraintEnd_toEndOf="@+id/tvMedicineNameSeparator"/>
        <TextView
            android:id="@+id/tvDoze"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="3"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvMedicineName"
            app:layout_constraintStart_toStartOf="@id/tvMedicineName"
            app:layout_constraintEnd_toEndOf="parent"/>



        <TextView
            android:id="@+id/tvTitleStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="Strength"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvStrength"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMedicineName"
            app:layout_constraintEnd_toStartOf="@id/tvStrengthSeparator"/>
        <TextView
            android:id="@+id/tvStrengthSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/tvStrength"
            app:layout_constraintStart_toStartOf="@+id/tvMedicineNameSeparator"
            app:layout_constraintEnd_toEndOf="@+id/tvMedicineNameSeparator"/>

        <TextView
            android:id="@+id/tvStrength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:text="150mg"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvDoze"
            app:layout_constraintStart_toStartOf="@id/tvMedicineName"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
